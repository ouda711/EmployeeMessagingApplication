@model EmployeeMessagingApplication.Areas.Models.Employee

<h2>Edit Employee</h2>

<form asp-action="Edit" method="post">
    <input type="hidden" asp-for="Id" />
    <div class="mb-3">
        <label for="Name" class="form-label">Name</label>
        <input asp-for="Name" class="form-check-input" required/>
    </div>
    <div class="mb-3">
        <label for="Position" class="form-label">Position</label>
        <input asp-for="Position" class="form-check-input" required/>
    </div>
    <div class="mb-3">
        <label for="Department" class="form-label">Department</label>
        <input asp-for="Department" class="form-check-input"  required/>
    </div>
    <div class="mb-3">
        <label for="Salary" class="form-label">Salary</label>
        <input asp-for="Salary" class="form-check-input" required/>
    </div>
    <button type="submit" class="btn btn-primary">Save</button>
</form>