@model IEnumerable<EmployeeMessagingApplication.Areas.Models.Employee>

<h2>Employee List</h2>
<a asp-action="Create">Add New Employee</a>

<table class="table">
    <thead>
    <tr>
        <th>Name</th>
        <th>Position</th>
        <th>Department</th>
        <th>Salary</th>
        <th>Actions</th>
    </tr>
    </thead>
    <tbody>
    @foreach (var employee in Model)
    {
        <tr>
            <td>@employee.Name</td>
            <td>@employee.Position</td>
            <td>@employee.Department</td>
            <td>@employee.Salary</td>
            <td>
                <a asp-action="Edit" asp-route-id="@employee.Id">Edit</a> |
                <a asp-action="Delete" asp-route-id="@employee.Id">Delete</a>
            </td>
        </tr>
    }
    </tbody>
</table>
