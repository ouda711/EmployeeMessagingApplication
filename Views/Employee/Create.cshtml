@model EmployeeMessagingApplication.Areas.Models.Employee

<h2>Create Employee</h2>

<form asp-action="Create" method="post">
    <div div class="mb-3">
        <label for="Name" class="form-label">Name</label>
        <input asp-for="Name" class="form-control" type="text" required/>
    </div>
    <div class="mb-3">
        <label for="Position" class="form-label">Position</label>
        <input asp-for="Position" class="form-control" type="text" required/>
    </div>
    <div class="mb-3">
        <label for="Department" class="form-label">Department</label>
        <input asp-for="Department" class="form-control" type="text" required/>
    </div>
    <div class="mb-3">
        <label for="Salary" class="form-label">Salary</label>
        <input asp-for="Salary" class="form-control" type="text" required/>
    </div>
    <button type="submit" class="btn btn-primary">Save</button>
</form>